{
    "format": {
        "enable": true,
        "braces": "k&r",
        "insertSpaces": true,
        "tabSize": 4
    },
    "diagnostics": {
        "enable": false
    },
    "files": {
        "associations": ["*.php"],
        "exclude": ["**/.git/**", "**/node_modules/**", "**/dist/**", "**/libs/**"]
    },
    "environment": {
        "includePaths": ["controller", "models", "src", "scripts"]
    }
}
